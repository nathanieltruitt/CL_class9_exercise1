<%= form_with model: @comment, url: post_comments_path do |form| %>
    <% if @comment.errors.any? %>
    <h5 class="text-danger">Unable to save due to <%= pluralize(@comment.errors.count, 'error') %></h5>
    <ul>
      <% @comment.errors.full_messages.each do |msg| %>
        <li><strong class="text-danger"><%= msg %></strong></li>
      <% end %>
    </ul>
  <% end %>
  <div class="field">
    <%= form.label :content, class: 'form-label' %>
    <%= form.text_area :content, class: 'form-control' %>
  </div>

  <%= form.submit 'Send' %>
<% end %>