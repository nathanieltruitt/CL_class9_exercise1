<header class="d-flex">
<h1 class="me-4">Posts</h1>
<div class="mt-3">
  <%= form_with url: '/posts', method: :get do |form| %>
    <%= form.text_field :search, placeholder: 'Search by Title', class: 'me-2' %>
    <%= form.submit 'Search' %>
  <% end %>
</div>
</header>
<div class="d-flex">
  <% all_posts_count.times do |idx| %>
    <% page_number = idx + 1 %>
    <div class="m-2"><%= link_to page_number, posts_path(page: page_number) %></div>
  <% end %>
</div>

<%= link_to 'Add new post', new_post_path %>

<% @posts.each do |post| %>
  <%= render 'post', post: post %>
<% end %>